<%= form_with model: @message, url: static_index_path, class: "mb-4" do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email address", required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number (optional)" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: "5", placeholder: "Message", required: true %>
  </div>
  <div class="form-group mb-1">
    <%= f.submit "Send Email", class: "btn btn-outline-primary" %>
  </div>
  <small class="text-muted">
    I pledge to use this power only for good
  </small>
<% end %>
