<%= simple_form_for(@project) do |f| %>
  <div class="container mb-4 px-4 py-3 rounded bg-lt shadow-sm text-dk">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :source %>
    <%= f.input :image %>
    <%= f.input :more, as: :text, input_html: { rows: 10 } %>
    <%= f.button :submit %>
  </div>
<% end %>
