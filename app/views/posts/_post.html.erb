<% if show_page? %>
  <div class="container">
    <h1><%= post.title %></h1>
    <p class="text-lt mb-3">
      <small>
        Created: <%= post.created_at.to_formatted_s(:long) %> |
        Updated: <%= post.updated_at.to_formatted_s(:long) %>
      </small>
    </p>
  </div>
<% end %>
<div class="container mb-4 px-4 py-3 rounded bg-lt shadow-sm text-dk">
  <% if !show_page? %>
    <%= link_to(post, class: "link-dark") do %>
      <h2><%= post.title %></h2>
    <% end %>
    <small class="text-muted">    
      Created: <%= date(post.created_at) %> |
      Updated: <%= date(post.updated_at) %>
    </small>
      <p>
        <small class="text-muted">
        <%= markdown_text(post.content.truncate(200)) %>
      </p>
    </small>
    <p>
      <%= link_to "View Post", post, class: "btn btn-sm btn-outline-secondary" %>
      <% if admin? %>
        <%= link_to "Edit Post", edit_post_path(post.id), class: "btn btn-sm btn-outline-info" %>
      <% end %>
    </p>
  <% end %>
  <% if show_page? %>
    <p><%= markdown_text(post.content) %></p>
    <p>
      <small class="text-muted">
        <%= link_to "Contact me", root_path(anchor: "contact") %>
        if you have any comments!
      </small>
    </p>
    <% if admin? %>
      <p>
        <%= link_to "Edit Post", edit_post_path(post.id), class: "btn btn-sm btn-outline-info" %>
        <%= link_to "Delete Post",  post_path(post.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
      </p>
    <% end %>
  <% end %>
</div>